<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="com.robthechippy.estimast.JobDetails$PlaceholderFragment">

		
		<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:shrinkColumns="1"
		android:stretchColumns="1"
		android:id="@+id/fragmentjobdetailsTableLayout1">

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Client:"
				android:id="@+id/textView12"
				android:layout_column="0"
				android:layout_marginBottom="20dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"
				android:id="@+id/txtJobDetailsClient"
				android:layout_column="1"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Status:"
				android:id="@+id/textView14"
				android:layout_column="0"/>

			<Spinner
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/spnJobDetails"
				android:layout_column="1"
				android:spinnerMode="dropdown"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Location:"
				android:id="@+id/textView13"
				android:layout_column="0"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/txtJobLocation"
				android:layout_column="1"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Viewed date:"
				android:id="@+id/textView15"
				android:layout_column="0"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="date"
				android:ems="10"
				android:id="@+id/txtJobViewDate"
				android:layout_column="1"
				android:onClick="entDate"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Due date:"
				android:id="@+id/textView16"
				android:layout_column="0"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="date"
				android:ems="10"
				android:id="@+id/txtJobDueDate"
				android:layout_column="1"
				android:onClick="entDate"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginTop="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Total:"
				android:id="@+id/textView17"
				android:layout_column="0"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"
				android:id="@+id/txtJobTotal"
				android:layout_column="1"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Note:"
				android:id="@+id/textView18"
				android:layout_column="0"
				android:layout_marginTop="10dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:ems="10"
				android:id="@+id/txtJobNote"
				android:layout_column="1"/>

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

		</TableRow>

	</TableLayout>


</ScrollView>

